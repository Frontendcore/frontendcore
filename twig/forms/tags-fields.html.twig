{% set current_children = "Tags Fields" %}
{% set current_section = "Forms" %}
{% set relative_path = "../" %}
{% import "../_macros/_demo.html.twig" as demos %}

{% extends "../_layout/_basic.html.twig" %}

{% block main %}
    <h1><span class="label-css fz-xl va-m">CSS</span> <span class="label-js fz-xl va-m">JS</span> Tags Fields</h1>
    {{ demos.demo(
        'text-fields',
        '../_demos/forms/tags-input.html',
        false,false,true
    )}}
    {{ demos.demo(
        'text-selects',
        '../_demos/forms/tags-select.html',
        false,false,true
    )}}

    {{ demos.settings(
    {
        "1" : {
            "name" :        "value",
            "description" : "Tags separated by coma. Use it also to prefill the input with tags."
        },
        "2" : {
            "name" :        "data-tc-values",
            "description" : "List separated by comma of the words and phrases to autocomplete.",
            "default" :     "left"
        },
        "3" : {
            "name" :        "data-tc-max",
            "description" : "Max number of tags allowed.",
            "default" :     "add a tag..."
        },
        "5" : {
            "name" :        "data-tc-select",
            "description" : "If it's set to true show the dropdown select to view all the values defined in data-tc-values. ",
            "default" :     "free"
        },
        "6" : {
            "name" :        "data-tc-mode",
            "description" : "Defines the mode of the tags entry (Restrict or free). Restrict only allow values defined in data-tc-values and allows any value. If you set the mode to Restrict, data-tc-select default value will be false.",
            "default" :     "free"
        },
        "7" : {
            "name" :        "placeholder",
            "description" : "Text that will be displayed when is empty.",
            "default" :     "left"
        }
    }
    )}}
{% endblock %}
