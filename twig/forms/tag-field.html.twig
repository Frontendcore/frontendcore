{% set current_children = "Tag Field" %}
{% set current_section = "Forms" %}
{% set relative_path = "../" %}
{% import "../_macros/_demo.html.twig" as demos %}

{% extends "../_layout/_basic.html.twig" %}

{% block main %}
    {{ demos.demo(
        'text-fields',
        PathComponents ~ 'form-tag-field/html/tags-input.html',
        false,false,true
    )}}
    {{ demos.demo(
        'text-selects',
        PathComponents ~ 'form-tag-field/html/tags-select.html',
        false,false,true
    )}}

    {{ demos.settings(
    {
        "1" : {
            "name" :        "value",
            "description" : "Tags separated by coma. Use it also to prefill the input with tags."
        },
        "2" : {
            "name" :        "data-fc-values",
            "description" : "List separated by comma of the words and phrases to autocomplete.",
            "default" :     "left"
        },
        "3" : {
            "name" :        "data-fc-max",
            "description" : "Max number of tags allowed.",
            "default" :     "add a tag..."
        },
        "5" : {
            "name" :        "data-fc-select",
            "description" : "If it's set to true show the dropdown select to view all the values defined in data-fc-values. ",
            "default" :     "free"
        },
        "6" : {
            "name" :        "data-fc-mode",
            "description" : "Defines the mode of the tags entry (Restrict or free). Restrict only allow values defined in data-fc-values and allows any value. If you set the mode to Restrict, data-fc-select default value will be false.",
            "default" :     "free"
        },
        "7" : {
            "name" :        "data-fc-text-no-suggestion",
            "description" : "Text that will be displayed when there are no suggestions. Use {{ query }} to show the query.",
            "default" :     "No result matching the term {{query}}"
        },
        "8" : {
            "name" :        "placeholder",
            "description" : "No result matching the term {{query}}",
            "default" :     "Add a Tag"
        }
    }
    )}}
{% endblock %}
