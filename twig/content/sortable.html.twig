{% set current_children = "Sortable lists" %}
{% set current_section = "Content" %}
{% set relative_path = "../" %}
{% import "../_macros/_demo.html.twig" as demos %}

{% extends "../_layout/_basic.html.twig" %}


{% block main %}
    <section class="box-lighten">
        <h2>Nested Lists</h2>
        <p>Drag & Drop nestable lists. This is very useful to order categories for example.</p>
        {{ demos.demo(
            'sortable-nested',
            PathComponents ~ 'sortable/html/sortable-nested.html'
        )}}
    </section>
    <section class="box-lighten">
        <h2>Order to input</h2>
         <p>Drag & Drop sortable lists to input field</p>
        {{ demos.demo(
            'sortable-input',
            PathComponents ~ 'sortable/html/sortable-input.html'
        )}}
    </section>
    <section class="box-lighten">
        <h2>Order to Ajax call</h2>
         <p>Drag & Drop sortable lists with ajax callback to save changes.</p>
        {{ demos.demo(
            'sortable-ajax',
            PathComponents ~ 'sortable/html/sortable-ajax.html'
        )}}
    </section>
    {{ demos.settings(
    {
        "1" : {
            "name" :        "data-fc-url",
            "description" : "Url of the ajax service to save changes. If it's not defined there is not ajax call.",
        },
        "2" : {
            "name" :        "data-fc-input",
            "description" : "Id of the Input that should get the order. If it's not defined no data will be send to any input.",
            "default" : "sortable"
        },
        "3" : {
            "name" :        "data-fc-output",
            "description" : "Define how will be the output send, by a string separated by comma or a complex json.",
            "default" : "string"
        },
        "4" : {
            "name" :        "data-fc-type",
            "description" : "If you define this as 'nested' will work with data-fc-depth levels of lists.",
            "default" : "default"
        },
        "5" : {
            "name" :        "data-fc-handle",
            "description" : "Looks for just an element (using jquery selector) inside the items to be the handle.",
            "default" : ""
        },
        "6" : {
            "name" :        "data-fc-depth",
            "description" : "If you define the type as nested will set how many depth levels will accept",
            "default" : "2"
        },
    }
    )}}
{% endblock %}