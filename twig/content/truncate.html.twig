{% set current_children = "Truncate" %}
{% set current_section = "Content" %}
{% set relative_path = "../" %}
{% import "../_macros/_demo.html.twig" as demos %}

{% extends "../_layout/_basic.html.twig" %}

{% block main %}

    <h3>Truncate characters</h3>
    {{ demos.demo(
        'text-fields',
        PathComponents ~ 'truncate/html/truncate.html'
    )}}

    <h3>Truncate lines</h3>
    {{ demos.demo(
        'text-linex',
        PathComponents ~ 'truncate/html/truncate-lines.html'
    )}}

    {{ demos.settings(
    {
        "1" : {
            "name" :        "data-fc-max",
            "description" : "Max character to crop text.",
            "default" : "100"
        },
        "2" : {
            "name" :        "data-fc-more",
            "description" : "Call to action to show more.",
            "default" : "[+]"
        },
        "3" : {
            "name" :        "data-fc-less",
            "description" : "Call to action to show less",
            "default" : "[-]"
        }
    }
    )}}
{% endblock %}