{
  "scss" : {
    "cwd": "scss",
    "dest": "build/static/css",
    "browsers" : ["last 1 version"],
    "packages": {
      "main": "main",
      "screen-xxxl": "screen-xxxl",
      "screen-xxl": "screen-xxl",
      "screen-xl": "screen-xl",
      "screen-l": "screen-l",
      "screen-m": "screen-m",
      "screen-s": "screen-s",
      "screen-xs": "screen-xs",
      "secondary": "secondary"
    }
  },
  "js" : {
    "cwd": ["components/swipe/html/"],
    "dest": "build/static/js",
    "uglify": true,
    "jshint" : true
  },
  "icons" : {
    "cwd" : "components/icons/font-awesome",
    "dest": "build/static/css",
    "destHtml" : "components/icons/html"
  },
  "bower" : {
    "cwd": "components"
  }
}